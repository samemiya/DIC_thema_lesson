<p id="notice"><%= notice %></p>

<h1>Listing Blogs</h1>
<div class="container-fluid"><div class="row"><div class="col-sm-10 col-md-8 col-lg-6">
<table class="table table-hover">
  <thead>
    <tr>
      <th>ユーザー名</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.user.name %></td>
        <td><%= blog.title %></td>
        <td><%= blog.content %></td>
        <td><%= link_to 'Show', blog , :class => 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog) , :class => 'btn btn-default' %></td>
        <td><%= link_to 'Destroy', blog, :class => 'btn btn-danger' ,method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Blog', new_blog_path, :class => 'btn btn-primary' %>
</div></div></div>